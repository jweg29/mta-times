// schema.prisma
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Stop {
    id                  Int     @id @default(autoincrement())
    gtfsStopId          String  @unique
    name                String
    lat                 String
    lon                 String
    northDirectionLabel String
    southDirectionLabel String
    ada                 String
    adaNotes            String
    locationType        String
    parentStation       String
    routes              Route[] @relation("StopRoutes")
}

model Route {
    id               Int    @id @default(autoincrement())
    gtfsRouteId      String
    agencyId         String
    shortName        String
    longName         String
    type             String
    routeDescription String
    url              String
    color            String
    textColor        String
    liveFeedURL      String
    stops            Stop[] @relation("StopRoutes")
}
